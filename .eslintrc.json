{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended", 
        "prettier"
    ],
    "plugins": ["prettier"],
    "overrides": [
        {
            "files": ["*.js"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error", 
            4
        ],
        "linebreak-style": [
            "error", 
            "unix"
        ],
        "quotes": [
            "error", 
            "double"
        ],
        "semi": [
            "error", 
            "always"
        ]
    }
}
